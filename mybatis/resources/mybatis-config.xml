<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<settings>
<!-- setting : mybatis 구동시 선언할 설정들을 작성하는 영역  -->
<!-- 만약 null로 데이터가 전달되었다면 빈칸이 아닌 null로 인식하라 -->
	 <setting name="jdbcTypeForNull" value="NULL"/>
</settings>
<!-- typeAlias : servlet, bean 클래스들의 풀클래스명을 단순한 클래스명으로 사용하기 위해 별칭을 등록한다 -->
<typeAliases>
	  <typeAlias type="com.mybatis.member.vo.Member" alias="Member"/>
</typeAliases>

<!-- environments : mybatis에서 연동할 DB정보들들 등록하는 영역  -->
  <environments default="development">
        <environment id="development">
    <!-- transactionManager JDBC MANAGER
    	- type => JDBC : 트랜잭션을 내가 직접 관리하겠다 (수동 commit)
    	- type => MANAGED : 트랜잭션에 관려하지 않겠다 (자동 commit)
     -->
       <transactionManager type="JDBC"/>
      <!-- dataSource의 type => POOLED | UNPOLLED (ConnentionPool사용여부) -->
       <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.OracleDriver"/>
                <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
                <property name="username" value="mybatis"/>
                <property name="password" value="1234"/>
            </dataSource>
        </environment>
    </environments>
  
  <!-- mappers : 실행할 sql문들을 기록 해둔 mapper파일들을 등록하는 영역 -->
   <mappers>
        <mapper resource="/mappers/member-mapper.xml"/>
    </mappers>
</configuration>